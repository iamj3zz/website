{
  "ci": {
    "collect": {
      "staticDistDir": "./_site",
      "numberOfRuns": 3,
      "url": [
        "http://localhost/index.html",
        "http://localhost/bio/index.html",
        "http://localhost/events/index.html",
        "http://localhost/contact/index.html",
        "http://localhost/works/01-lorem-ipsum/index.html",
        "http://localhost/works/28-modular-example/index.html"
      ]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.70}],
        "categories:accessibility": ["error", {"minScore": 0.85}],
        "categories:best-practices": ["warn", {"minScore": 0.70}],
        "categories:seo": ["warn", {"minScore": 0.85}],

        "unused-javascript": "off",
        "uses-responsive-images": "off",
        "offscreen-images": "off",

        "errors-in-console": "warn",
        "valid-source-maps": "off",
        "canonical": "off",
        "crawlable-anchors": "warn",
        "is-crawlable": "error",
        "robots-txt": "off",

        "color-contrast": "warn",
        "document-title": "error",
        "html-has-lang": "error",
        "meta-description": "warn",
        "image-alt": "warn",

        "render-blocking-resources": "off",
        "uses-long-cache-ttl": "off",
        "uses-rel-preconnect": "off",
        "font-display": "off",
        "third-party-facades": "off",

        "installable-manifest": "off",
        "maskable-icon": "off",
        "splash-screen": "off",
        "themed-omnibox": "off",
        "csp-xss": "off",
        "total-byte-weight": "off",
        "third-party-cookies": "off",
        "unminified-css": "off",
        "unsized-images": "warn",
        "frame-title": "warn",
        "image-redundant-alt": "warn",
        "heading-order": "warn",
        "identical-links-same-purpose": "warn",
        "inspector-issues": "off"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
